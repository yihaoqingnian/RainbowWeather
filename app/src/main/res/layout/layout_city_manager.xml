<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="#778899"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/item_city_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:text="北京"
                android:textSize="35sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_city_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="12℃"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/item_city_line1"
                android:layout_width="130dp"
                android:layout_height="2dp"
                android:layout_below="@id/item_city_tv_city"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/item_city_tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffff"
                android:text="晴"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/item_city_temprange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_city_line1"
                android:layout_marginLeft="90dp"
                android:text="16~9℃"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>